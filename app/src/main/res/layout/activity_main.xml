<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.algonquincollege.wils0751.guessanumber.MainActivity">

    <TextView
        android:text="@string/Dory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="36sp"
        android:gravity="right"
        android:layout_below="@+id/userImg"
        android:layout_alignStart="@+id/dory"
        android:layout_marginStart="16dp" />

    <ImageView
        app:srcCompat="@drawable/dory"
        android:id="@+id/dory"
        android:scaleType="fitCenter"
        android:layout_height="400px"
        android:layout_width="400px"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/You"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user"
        android:textSize="36sp"
        android:gravity="left"
        android:layout_marginStart="45dp"
        android:layout_below="@+id/userImg"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="400px"
        android:layout_height="400px"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/userImg"
        android:layout_alignTop="@+id/dory"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp" />

    <TextView
        android:text="@string/guesspls"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/guessNumber"
        android:textSize="32sp"
        android:gravity="center"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <Button
        android:text="@string/resetbtn"
        android:layout_width="185dp"
        android:layout_height="80dp"
        android:id="@+id/resetBtn"
        android:textSize="36sp"
        android:onClick="onClick"
        android:layout_alignTop="@+id/guessBtn"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/userGuess"
        android:hint="@string/guess"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="26sp"
        android:gravity="center"
        android:layout_above="@+id/guessBtn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"
/>

    <Button
        android:text="@string/guessbtn"
        android:layout_width="185dp"
        android:layout_height="80dp"
        android:id="@+id/guessBtn"
        android:textSize="36sp"
        android:onClick="onClick"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/VS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="60dp"
        android:layout_marginBottom="14dp"
        android:layout_alignBottom="@+id/dory"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:textSize="25dp"
        android:layout_above="@+id/resetBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />


</RelativeLayout>
